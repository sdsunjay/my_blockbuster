<h2><%= @genre.name %> </h2>
<div id="movies-index">
   <% if @movies.exists? %>
        <% @movies.each_slice(4) do |movie| %>
            <div class="row">
                <% movie.each do |movie| %>
                    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                        <h3><%= movie.title %></h3>
                        <%= link_to 'Learn More', movie_path(movie), class:'btn btn-primary' %>
                    </div>
                <% end %>
            </div>
        <% end %>
    <% else %>
       <p>No movies in this genre yet.</p>
    <% end %>
</div>
